<resources>
    <style name="label" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/merriweather_sans_regular</item>
        <item name="android:textSize">@dimen/label_size</item>
    </style>
    <style name="text" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/merriweather_sans_regular</item>
        <item name="android:textSize">@dimen/text_size</item>
